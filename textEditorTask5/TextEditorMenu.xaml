<UserControl x:Class="textEditorTask5.TextEditorMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:textEditorTask5"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Menu>
        <MenuItem Header="_File">
            <MenuItem Header="_New" x:Name="New"/>
            <MenuItem Header="_Open" x:Name="Open"/>
            <MenuItem Header="_Save" x:Name="Save"/>
            <MenuItem Header="_SaveAs" x:Name="Save_As"/>
        </MenuItem>
        <MenuItem Header="Edit">
            <MenuItem Header="_Cut" x:Name="Cut"/>
            <MenuItem Header="_Copy" x:Name="Copy"/>
            <MenuItem Header="_Paste" x:Name="Paste"/>
            <MenuItem Header="_Delete" x:Name="Delete"/>
        </MenuItem>
        <MenuItem Header="_Help">
            <MenuItem Header="_About"
                      Click="About_Click"/>
        </MenuItem>
    </Menu>
</UserControl>
